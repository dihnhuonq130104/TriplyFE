<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lobster"
            android:text="Yêu thích"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- Status Text -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/favorite_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có địa điểm yêu thích nào.\nHãy thêm địa điểm từ trang chi tiết!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <!-- Favorite Icon -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="❤️"
            android:textSize="64sp" />

        <!-- Future: RecyclerView for favorite items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_favorites"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <include layout="@layout/layout_bottom_menu" />

</LinearLayout>